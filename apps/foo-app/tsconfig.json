{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "plugins": [{ "name": "ts-bazel-plugin" }],
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2020"
  }
}
